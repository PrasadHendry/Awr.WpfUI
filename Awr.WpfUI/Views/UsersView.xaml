<UserControl x:Class="Awr.WpfUI.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Awr.WpfUI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000" Background="#F0F2F5">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#41546E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: ROLE GRID -->
        <DockPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="System Roles" DockPanel.Dock="Top" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
            <DataGrid ItemsSource="{Binding Roles}" SelectedItem="{Binding SelectedRole}" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" HeadersVisibility="Column" GridLinesVisibility="Horizontal" BorderBrush="#CCC" BorderThickness="1" Background="White" RowHeight="35">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding RoleID}" Width="60">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Role Name" Binding="{Binding RoleName}" Width="*" FontWeight="Bold">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <!-- RIGHT: ACTIONS PANEL -->
        <GroupBox Grid.Column="1" Header="Manage Role" FontSize="14" FontWeight="Bold" Background="White" BorderBrush="#CCC">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Selected Role:" Foreground="#666" Margin="0,0,0,5"/>
                <TextBox Grid.Row="1" Text="{Binding SelectedRole.RoleName, TargetNullValue='(Select a Role)'}" IsReadOnly="True" Background="#F9F9F9" Padding="5" Height="30" FontSize="14" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Grid.Row="2" Text="Set New Password:" Foreground="#666" Margin="0,0,0,5"/>

                <!-- PASSWORD TOGGLE GRID -->
                <Grid Grid.Row="3" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="35"/>
                    </Grid.ColumnDefinitions>

                    <!-- Masked Input -->
                    <PasswordBox x:Name="pwdBox" PasswordChanged="PasswordBox_PasswordChanged"
                                 Padding="5" Height="30" FontSize="14" BorderBrush="#CCC" VerticalContentAlignment="Center"
                                 Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToVis}, ConverterParameter=Inverse}"/>

                    <!-- Visible Input -->
                    <TextBox x:Name="txtVisible" Text="{Binding NewPassword, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="5" Height="30" FontSize="14" BorderBrush="#CCC" VerticalContentAlignment="Center"
                             Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToVis}}"/>

                    <!-- Toggle Button -->
                    <Button Grid.Column="1" Command="{Binding TogglePasswordVisibilityCommand}" Click="EyeButton_Click"
                            Background="Transparent" BorderThickness="0" Margin="2,0,0,0" Cursor="Hand">
                        <TextBlock Text="👁" FontSize="18" VerticalAlignment="Center"/>
                    </Button>
                </Grid>

                <StackPanel Grid.Row="4" VerticalAlignment="Top">
                    <Button Content="Update Password" Command="{Binding UpdatePasswordCommand}" Height="40" Background="#007BFF" Foreground="White" FontWeight="Bold" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <ProgressBar Height="4" IsIndeterminate="True" Margin="0,10,0,0" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>