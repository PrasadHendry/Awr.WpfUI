<Window x:Class="Awr.WpfUI.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Awr.WpfUI.ViewModels"
        mc:Ignorable="d"
        Title="AWR Issuance System - Login" 
        Height="600" Width="800"
        MinHeight="500" MinWidth="600"
        WindowStartupLocation="CenterScreen" 
        Background="#F0F2F5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#41546E" Padding="20">
            <TextBlock Text="AWR Issuance System" FontSize="24" FontWeight="Bold" Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Login Card -->
        <Border Grid.Row="1" Width="450" VerticalAlignment="Center" 
                Background="White" CornerRadius="8" Padding="40,30,40,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.15"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Welcome Back" FontSize="20" FontWeight="SemiBold" Foreground="#333" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Role -->
                <TextBlock Text="Select Role" FontSize="14" Foreground="#666" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Roles}" 
                          SelectedItem="{Binding SelectedRole}" 
                          DisplayMemberPath="RoleName"
                          FontSize="15" Padding="10" Height="40" Margin="0,0,0,15"
                          VerticalContentAlignment="Center"/>

                <!-- Password -->
                <TextBlock Text="Password" FontSize="14" Foreground="#666" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" PasswordChanged="PasswordBox_PasswordChanged" 
                             FontSize="15" Padding="10" Height="40" Margin="0,0,0,25"
                             VerticalContentAlignment="Center"/>

                <!-- Button -->
                <Button Content="LOGIN" Command="{Binding LoginCommand}" 
                        Height="50" FontSize="16" FontWeight="Bold"
                        Background="#007BFF" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- Error & Spinner Container (Fixed Height Area to prevent jumping/hiding) -->
                <Grid Margin="0,15,0,0" Height="40">
                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#DC3545" 
                               TextWrapping="Wrap" TextAlignment="Center" 
                               VerticalAlignment="Top" FontWeight="SemiBold"/>

                    <!-- Spinner (Overlays text or appears when busy) -->
                    <ProgressBar IsIndeterminate="True" Height="4" VerticalAlignment="Bottom"
                                 Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"/>
                </Grid>

            </StackPanel>
        </Border>

        <!-- Footer -->
        <StatusBar Grid.Row="2" Background="#E9ECEF">
            <StatusBarItem Content="v2.0 - WPF Migration" Foreground="#888"/>
        </StatusBar>
    </Grid>
</Window>