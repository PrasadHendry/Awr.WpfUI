<UserControl x:Class="Awr.WpfUI.Views.RequestSubmissionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Awr.WpfUI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Background="White">

    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555"/>
        </Style>
        <Style TargetType="TextBox" x:Key="InputStyle">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Form Grid -->
            <RowDefinition Height="*"/>
            <!-- Comments -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="New Document Request" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>

        <!-- Form Fields -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- Row 0 -->
            <TextBlock Text="Request No:" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
            <TextBox Text="{Binding RequestNo}" IsReadOnly="True" Background="#F0F0F0" Grid.Row="0" Grid.Column="1" Style="{StaticResource InputStyle}"/>

            <TextBlock Text="AWR Type:" Grid.Row="0" Grid.Column="2" Style="{StaticResource LabelStyle}"/>
            <ComboBox Grid.Row="0" Grid.Column="3" ItemsSource="{Binding AwrTypes}" SelectedItem="{Binding SelectedType}" Height="35" Margin="0,0,20,0"/>

            <!-- Row 1 -->
            <TextBlock Text="Material/Product:" Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
            <TextBox Text="{Binding MaterialProduct}" Grid.Row="1" Grid.Column="1" Style="{StaticResource InputStyle}"/>

            <TextBlock Text="Batch No:" Grid.Row="1" Grid.Column="2" Style="{StaticResource LabelStyle}"/>
            <TextBox Text="{Binding BatchNo}" Grid.Row="1" Grid.Column="3" Style="{StaticResource InputStyle}"/>

            <!-- Row 2 -->
            <TextBlock Text="AR No:" Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
            <TextBox Text="{Binding ArNo}" Grid.Row="2" Grid.Column="1" Style="{StaticResource InputStyle}"/>

            <TextBlock Text="AWR No:" Grid.Row="2" Grid.Column="2" Style="{StaticResource LabelStyle}"/>
            <TextBox Text="{Binding AwrNo}" Grid.Row="2" Grid.Column="3" Style="{StaticResource InputStyle}"/>
        </Grid>

        <!-- Comments -->
        <GroupBox Header="Justification / Comments" Grid.Row="2" Margin="0,10,0,20" Foreground="#555" BorderBrush="#DDD">
            <TextBox Text="{Binding Comments}" AcceptsReturn="True" TextWrapping="Wrap" BorderThickness="0" Margin="5"/>
        </GroupBox>

        <!-- Footer Actions -->
        <Grid Grid.Row="3">
            <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" Foreground="#666"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ProgressBar Width="100" Height="20" IsIndeterminate="True" Margin="0,0,10,0" 
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"/>

                <Button Content="Submit Request" Command="{Binding SubmitCommand}" 
                        Background="#28A745" Foreground="White" FontWeight="Bold" Padding="20,10"
                        BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>