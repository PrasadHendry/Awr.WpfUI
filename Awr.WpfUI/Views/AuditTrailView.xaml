<UserControl x:Class="Awr.WpfUI.Views.AuditTrailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Awr.WpfUI.ViewModels"
             xmlns:conv="clr-namespace:Awr.WpfUI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200" Background="#F0F2F5">

    <UserControl.Resources>
        <conv:InverseBooleanConverter x:Key="InverseBoolToBool"/>
        <conv:EnumToDisplayStringConverter x:Key="EnumToString"/>

        <!-- DEFAULT (LEFT) WRAPPED STYLE -->
        <Style x:Key="WrappedColumnStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- CENTER ALIGNED WRAPPED STYLE -->
        <Style x:Key="CenterAlignedStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,2"/>
        </Style>

        <!-- INPUT STYLES -->
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
        <Style TargetType="TextBox" x:Key="FilterInputStyle">
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0,0,0"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="ComboBox" x:Key="FilterComboStyle">
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- HEADER STYLE: CENTERED -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#41546E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#667D97"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <!-- CENTERED -->
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 1. FILTERS (No Layout Changes Needed) -->
        <GroupBox Header="Filters" FontSize="14" FontWeight="Bold" Margin="0,0,0,15" Background="White" BorderBrush="#CCC">
            <Grid Margin="10,10,10,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="45"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource LabelStyle}">Request No. / AWR No.<LineBreak/>Material/Product / Batch No. :</TextBlock>
                    <TextBox Grid.Column="1" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FilterInputStyle}" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="AR No:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Column="3" Text="{Binding SearchArNo, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource FilterInputStyle}" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="4" Text="Status:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Column="5" ItemsSource="{Binding StatusOptions}" SelectedItem="{Binding SelectedStatusOption}" DisplayMemberPath="Display" Style="{StaticResource FilterComboStyle}" VerticalAlignment="Center"/>
                    <Grid Grid.Row="1" Grid.ColumnSpan="6" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="My Requests Only" IsChecked="{Binding ShowAll, Converter={StaticResource InverseBoolToBool}}" Margin="0,0,15,0" VerticalAlignment="Center"/>
                            <CheckBox Content="Show All" IsChecked="{Binding ShowAll}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Grid.Column="1" Text="{Binding TotalRecords, StringFormat='Total Records: {0}'}" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center"/>
                    </Grid>
                </Grid>
                <Button Grid.Column="1" Content="Search / Refresh" Command="{Binding RefreshCommand}" Background="#007BFF" Foreground="White" FontWeight="Bold" FontSize="14" Margin="10,0,0,0" Height="45" VerticalAlignment="Top" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </GroupBox>

        <!-- 2. DATA GRID (Alignment Applied) -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" 
                  ScrollViewer.HorizontalScrollBarVisibility="Visible"
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                  SelectionMode="Single" SelectionUnit="FullRow"
                  AutoGenerateColumns="False" IsReadOnly="True" 
                  GridLinesVisibility="All" VerticalGridLinesBrush="#EEE" HorizontalGridLinesBrush="#EEE"
                  BorderBrush="#555" BorderThickness="1" Background="White"
                  RowHeight="60" FrozenColumnCount="2">
            <DataGrid.Columns>
                <!-- Request No (Center) -->
                <DataGridTextColumn Header="Request No." Binding="{Binding RequestNo}" Width="140" FontWeight="SemiBold" ElementStyle="{StaticResource CenterAlignedStyle}"/>

                <!-- AWR No (Left) -->
                <DataGridTextColumn Header="AWR No." Binding="{Binding AwrNo}" Width="140" ElementStyle="{StaticResource WrappedColumnStyle}"/>

                <!-- Type (Center) -->
                <DataGridTextColumn Header="Type" Binding="{Binding AwrType}" Width="80" ElementStyle="{StaticResource CenterAlignedStyle}"/>

                <!-- Material (Left) -->
                <DataGridTextColumn Header="Material/Product" Binding="{Binding MaterialProduct}" Width="250" ElementStyle="{StaticResource WrappedColumnStyle}"/>

                <!-- Batch No (Center) -->
                <DataGridTextColumn Header="Batch No." Binding="{Binding BatchNo}" Width="120" ElementStyle="{StaticResource CenterAlignedStyle}"/>

                <!-- AR No (Left) -->
                <DataGridTextColumn Header="AR No." Binding="{Binding ArNo}" Width="120" ElementStyle="{StaticResource WrappedColumnStyle}"/>

                <!-- Qty (Center) -->
                <DataGridTextColumn Header="Qty Issued" Binding="{Binding QtyIssued, StringFormat=0}" Width="80" ElementStyle="{StaticResource CenterAlignedStyle}"/>

                <!-- Status (Center) -->
                <DataGridTextColumn Header="Status" Binding="{Binding Status, Converter={StaticResource EnumToString}}" Width="130">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource CenterAlignedStyle}">
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- QC (Center) -->
                <DataGridTextColumn Header="Prepared By (QC)" Binding="{Binding RequestedBy}" Width="130" ElementStyle="{StaticResource CenterAlignedStyle}"/>

                <!-- QA (Center) -->
                <DataGridTextColumn Header="Approved By (QA)" Binding="{Binding IssuedBy}" Width="130" ElementStyle="{StaticResource CenterAlignedStyle}"/>

                <!-- Printed By (Center) -->
                <DataGridTextColumn Header="Printed By (QC)" Binding="{Binding ReceivedBy}" Width="130" ElementStyle="{StaticResource CenterAlignedStyle}"/>

                <!-- Voided By (Center) -->
                <DataGridTextColumn Header="Voided By (QC)" Binding="{Binding ReturnedBy}" Width="130" ElementStyle="{StaticResource CenterAlignedStyle}"/>

                <!-- Remark (Left) -->
                <DataGridTextColumn Header="Remark / Justification" Binding="{Binding Remark}" Width="400" ElementStyle="{StaticResource WrappedColumnStyle}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 3. FOOTER -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <Button Content="Export CSV" Width="100" Height="30" Margin="0,0,10,0" Background="#6C757D" Foreground="White" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Export Excel" Width="100" Height="30" Background="#6C757D" Foreground="White" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Visibility="{Binding IsPagingEnabled, Converter={StaticResource BoolToVis}}">
                <Button Content="&lt; Prev" Command="{Binding PrevPageCommand}" Width="80" Height="30" Margin="0,0,10,0" Background="#DDD" BorderThickness="0"/>
                <TextBlock VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"><Run Text="Page "/><Run Text="{Binding CurrentPage}"/><Run Text=" of "/><Run Text="{Binding TotalPages}"/></TextBlock>
                <Button Content="Next &gt;" Command="{Binding NextPageCommand}" Width="80" Height="30" Background="#DDD" BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>