<UserControl x:Class="Awr.WpfUI.Views.IssuanceQueueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900" Background="White">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header + Search -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Details / Actions -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Pending Approval Queue" FontSize="18" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBox Width="200" Height="30" Margin="0,0,10,0" Padding="5" VerticalContentAlignment="Center" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                         ToolTip="Search by Request No, Batch, Product..."/>
                <Button Content="Refresh" Command="{Binding RefreshCommand}" Padding="15,5"/>
            </StackPanel>
        </Grid>

        <!-- Data Grid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}"
                  AutoGenerateColumns="False" IsReadOnly="True" 
                  SelectionMode="Single" GridLinesVisibility="Horizontal"
                  BorderBrush="#DDD" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Request No" Binding="{Binding RequestNo}" Width="140" FontWeight="SemiBold"/>
                <DataGridTextColumn Header="AWR No" Binding="{Binding AwrNo}" Width="140"/>
                <DataGridTextColumn Header="Product" Binding="{Binding MaterialProduct}" Width="*"/>
                <DataGridTextColumn Header="Batch" Binding="{Binding BatchNo}" Width="100"/>
                <DataGridTextColumn Header="Requested By" Binding="{Binding RequestedBy}" Width="120"/>
                <DataGridTextColumn Header="Date" Binding="{Binding RequestedAt, StringFormat=dd-MM-yyyy}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Details / Actions Panel -->
        <Border Grid.Row="2" Margin="0,15,0,0" Padding="15" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="1" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <!-- Details -->
                    <ColumnDefinition Width="3*"/>
                    <!-- Reject Comment -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Buttons -->
                </Grid.ColumnDefinitions>

                <!-- 1. Selection Details -->
                <StackPanel>
                    <TextBlock Text="Selected Request Details" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding SelectedItem.RequestComment, StringFormat='Comment: {0}', TargetNullValue='(No Comment)'}" 
                               Foreground="#555" TextWrapping="Wrap" Margin="0,0,10,0"/>
                </StackPanel>

                <!-- 2. Rejection Input -->
                <StackPanel Grid.Column="1" Margin="10,0">
                    <TextBlock Text="Rejection Reason (Required for Reject)" FontSize="12" Foreground="#666" Margin="0,0,0,3"/>
                    <TextBox Text="{Binding RejectComment, UpdateSourceTrigger=PropertyChanged}" 
                             Height="50" TextWrapping="Wrap" AcceptsReturn="True" Padding="5"/>
                </StackPanel>

                <!-- 3. Actions -->
                <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Orientation="Horizontal">
                    <ProgressBar Width="80" Height="15" IsIndeterminate="True" Margin="0,0,10,0" 
                                 Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"/>

                    <Button Content="Reject" Command="{Binding RejectCommand}" 
                            Background="#DC3545" Foreground="White" FontWeight="Bold" 
                            Height="35" Width="100" Margin="0,0,10,0" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="Approve (Generate)" Command="{Binding ApproveCommand}" 
                            Background="#28A745" Foreground="White" FontWeight="Bold" 
                            Height="35" Width="140" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>